# === LLM Configuration ===
# OpenAI-compatible endpoint (works with vLLM, Ollama, OpenAI, etc.)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_api_key_here
OPENAI_MODEL=ft:gpt-3.5-turbo-0125:personal:ggf-case:DC4cOuBU   # Replace with your fine-tuned model name if using a custom model or use a base model like gpt-3.5-turbo if not fine-tuning.

# === RAG Configuration ===
TOP_K=12
EMBEDDING_MODEL=all-MiniLM-L6-v2
RETRIEVAL_STRATEGY=hybrid
CHUNK_STRATEGY=fixed
RERANKER_ENABLED=true

# === Diff Guard ===
DIFF_MAX_LINES=250
DIFF_MAX_FILES=6

# === Optional: Qdrant Vector DB ===
QDRANT_URL=http://localhost:6333
QDRANT_COLLECTION=ggf_codebase

# === Eval ===
EVAL_TIMEOUT_SECONDS=120
LOG_LEVEL=INFO
